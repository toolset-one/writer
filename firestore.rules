service cloud.firestore {
  match /databases/{database}/documents {

    match /users/{user} {
      allow read, update, delete: if request.auth.uid == user;
      allow create: if request.auth.uid != null;
    }

    match /texts/{text} {
      allow read, update, delete: if request.auth.uid == text.user;
      allow create: if request.auth.uid != null;
    }

  }
}